{
  "openapi": "3.0.3",
  "info": {
    "title": "api-typescript-node",
    "description": "Documentation with all specification",
    "version": "1.0.0",
    "contact": {
      "name": "Aurelio Mesquita"
    }
  },
  "paths": {
    "/roles": {
      "post": {
        "tags": ["Roles"],
        "summary": "Create a role",
        "description": "Create a new role",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Role created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Role already exists"
          }
        }
      },
      "get": {
        "tags": ["Roles"],
        "summary": "List all roles.",
        "description": "Return all roles pagineted.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Number of the pages",
            "required": false,
            "schema": {
              "type": "number",
              "example": "page=1"
            },
            "style": "label"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of register per page",
            "required": false,
            "schema": {
              "type": "number",
              "example": "limit=15"
            },
            "style": "label"
          }
        ],
        "responses": {
          "200": {
            "description": "Success.",
            "content": {
              "application/json": {
                "example": {
                  "perPage": 15,
                  "total": 2,
                  "currentPage": 1,
                  "data": [
                    {
                      "id": "4894caf8-13a8-4f33-99a9-7e236314e4ce",
                      "name": "Users",
                      "created_at": "2023-03-07T00:20:01.000Z"
                    },
                    {
                      "id": "26164609-4976-450a-8fac-f7982f76b0d8",
                      "name": "Admin",
                      "created_at": "2023-03-07T23:30:20.000Z"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/roles/{id}": {
      "put": {
        "tags": ["Roles"],
        "summary": "Update a role.",
        "description": "Update a role.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Indentify of a role",
            "required": true,
            "schema": {
              "type": "uuid"
            },
            "style": "label"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "name": { "type": "string" } }
              },
              "example": {
                "id": "4894caf8-13a8-4f33-99a9-7e236314e4ce",
                "name": "Administrator",
                "created_at": "2023-03-07T00:20:01.000Z"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request."
          },
          "404": {
            "description": "Nod found."
          }
        }
      },
      "get": {
        "tags": ["Roles"],
        "summary": "Find roles by ID.",
        "description": "Returns roles based ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Indentify of a role",
            "required": true,
            "schema": {
              "type": "uuid"
            },
            "style": "label"
          }
        ],
        "responses": {
          "200": {
            "description": "Success.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "id": "4894caf8-13a8-4f33-99a9-7e236314e4ce",
                  "name": "Administrator",
                  "created_at": "2023-03-07T00:20:01.000Z"
                }
              }
            }
          },
          "400": {
            "description": "Bad request."
          },
          "404": {
            "description": "Nod found."
          }
        }
      }
    }
  }
}
